alignment top_right
background yes
border_width 2
cpu_avg_samples 2
default_color cornflowerblue
default_outline_color white
default_shade_color white
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
gap_x 15
gap_y 15 
maximum_width 430
max_port_monitor_connections 64
max_specials 512
max_user_text 16384
minimum_size 330 10
net_avg_samples 2
no_buffers yes
out_to_console no
wm_class_name Conky
own_window_colour 000000
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent yes
own_window_type override
own_window yes
own_window_class conky
stippled_borders 2
update_interval 2
uppercase no
use_spacer yes
use_xft yes
xftalpha 0.8
xftfont  Bitstream Vera Sans Mono:size=10

TEXT
${color #0077ff}
$nodename     ${alignc}$sysname $kernel ${alignr}${time %l:%M%p}

CPU usage: ${cpu}% ${color #0077ff} ${alignr}RAM: $mem/$memmax
${cpugraph 0 50,200 104E8B 0077ff} ${alignr}${memgraph 50,200 FF0500 00735B -l }

Swap   :   ${fs_used swap}/$swapmax  ${alignr}${fs_bar 8,200 swap}
Root / :   ${fs_used /}/${fs_size /} ${alignr}${fs_bar 8,200 /}

${color #0077ff}Procs: $processes ${color #0077ff}Run: $running_processes ${color #0077ff}

Name              ${alignr}PID     CPU%    MEM%
by CPU
${top name 1} ${alignr}${top pid 1}  ${top cpu 1}  ${top mem 1}
${top name 2} ${alignr}${top pid 2}  ${top cpu 2}  ${top mem 2}
${top name 3} ${alignr}${top pid 3}  ${top cpu 3}  ${top mem 3}
${top name 4} ${alignr}${top pid 4}  ${top cpu 4}  ${top mem 4}

