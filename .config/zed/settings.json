// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  //"proxy": "socks5://localhost:9150",
  "disable_ai": true,
  // "features": {
  // "edit_prediction_provider": "copilot",
  // },
  "auto_update": false,
  "auto_update_extensions": {
    "html": false,
  },
  "base_keymap": "VSCode",
  "ui_font_family": "Fira Code",
  "ui_font_weight": 400,
  "ui_font_size": 16,
  "buffer_font_family": "Fira Code",
  "buffer_font_size": 14.0,
  "buffer_font_weight": 400,
  "buffer_line_height": { "custom": 1.42 },
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light Hard",
    "dark": "Adaptify Darker",
  },
  "theme_overrides": {
    "Gruvbox Dark Hard": {
      "editor.background": "#0a0a0a",
      "panel.background": "#0a0a0a",
      "syntax": {
        "comment": {
          "font_style": "italic",
        },
        "comment.doc": {
          "font_style": "italic",
        },
      },
      "accents": [
        "#ff0000",
        "#ff7f00",
        "#ffff00",
        "#00ff00",
        "#0000ff",
        "#8b00ff",
      ],
    },
    "Adaptify Darker": {
      "editor.background": "#0a0a0a",
      "panel.background": "#0a0a0a",
      "syntax": {
        "comment": {
          "font_style": "italic",
        },
        "comment.doc": {
          "font_style": "italic",
        },
      },
      "accents": [
        "#ff0000",
        "#ff7f00",
        "#ffff00",
        "#00ff00",
        "#0000ff",
        "#8b00ff",
      ],
    },
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/local/bin/clangd",
        "arguments": [
          "--background-index",
          "--compile-commands-dir=build",
          "--clang-tidy",
          "--clang-tidy-checks=*",
          "--header-insertion=never",
        ],
      },
    },
    "biome": {
      "settings": {
        "config_path": "{path}",
      },
    },
    "kotlin-lsp": {
      "binary": {
        "path": "/mnt/main/kotlin-lsp/kotlin-lsp.sh",
        "arguments": ["--stdio"],
      },
    },
  },
  "languages": {
    "C++": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "/usr/local/bin/clang-format",
          "arguments": [],
        },
      },
    },
    "Go": {
      "format_on_save": "on",
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["biome", "format", "./", "--write"],
        },
      },
      "format_on_save": "on",
    },
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome",
        },
      },
      "code_actions_on_format": {
        "source.fixAll.biome": false,
        "source.organizeImports.biome": false,
      },
      "format_on_save": "on",
    },
    "Kotlin": {
      "language_servers": ["kotlin-lsp"],
    },
    "JSON": {
      "format_on_save": "off",
    },
  },
}
